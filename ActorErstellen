# Copy/Paste ins Terminal zum Erstellen eines Actors

rails console

@itype_1 = InformationType.new
@itype_1.name = "TestItype1"
@itype_1.key = :itype1
@itype_1.save

@itype_2 = InformationType.new
@itype_2.name = "TestItype2"
@itype_2.key = :itype2
@itype_2.save

@atype_1 = ActorType.new
@atype_1.name = "Atype1"
@atype_1.key = :atype1
@atype_1.information_type.push(InformationType.find_by_key(:itype1))
@atype_1.information_type.push(InformationType.find_by_key(:itype2))
@atype_1.save

@actor1 = Actor.new
@actor1.actor_type = @atype_1
@actor1.save

@information1 = Information.new
@information1.shit_value = "Testvalue1"
@information1.information_type = @itype_1

@information2 = Information.new
@information2.shit_value = "Testvalue2"
@information2.information_type = @itype_2

@actor1.informations.push(@information1)
@actor1.informations.push(@information2)

@actor1.save
@actor1

@actor2 = Actor.new
@actor2.actor_type = @atype_1
@actor2.save

@information3 = Information.new
@information3.shit_value = "Testvalue3"
@information3.information_type = @itype_1

@information4 = Information.new
@information4.shit_value = "Testvalue4"
@information4.information_type = @itype_2

@actor2.informations.push(@information3)
@actor2.informations.push(@information4)

@actor2.save
@actor2

Actor.full_text_search("Testvalue1").size
Actor.full_text_search("Testvalue3").size
Actor.full_text_search("Test").size
Actor.full_text_search("Other").size

exit


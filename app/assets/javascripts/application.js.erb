var SGfM = {
  remove_form : function(id, field_number) {
    $(id + "_" + field_number).remove();
  },
  add_form : function(controller_path, after_id) {
    jQuery.ajax({
      url: controller_path,
      type: 'GET',
      dataType: 'html',
      success: function(data) {
        jQuery(after_id).after(data);
      }
    });
  }
}


SGfM.actor = {
  render_matching_form : function(controller_path, actor_type_key) {
    jQuery.ajax({
      url: controller_path,
      type: 'GET',
      data: {"actor_type_key" : actor_type_key},
      dataType: 'html',
      success: function(data) {
          jQuery('#information-types-form').html(data);
      }
    });
  }
}

SGfM.relationship = {
  add_relationship_form : function(controller_path) {
    SGfM.add_form(controller_path, '#relationship-form');
  },
  remove_relationship_form : function(field_number) {
    SGfM.remove_form("#relationship", field_number);
  }
}

SGfM.actor_type = {
  add_information_type_form : function(controller_path) {
    SGfM.add_form(controller_path, '#information-type-form');
  },
  remove_information_type_form : function(field_number) {
    SGfM.remove_form('#information_type', field_number)
  }
}




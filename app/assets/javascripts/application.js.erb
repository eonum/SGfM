var SGfM = {
  remove_form : function(id, field_number) {
    $(id + "_" + field_number).remove();
  },
  add_form : function(controller_path, id) {
    jQuery.ajax({
      url: controller_path,
      type: 'GET',
      dataType: 'html',
      success: function(data) {
        jQuery(id).after(data); <!-- if you use before here, the relationship reference shit will break!!!!!!-->
      }
    });
  },
  add_form_before : function(controller_path, id) {
    jQuery.ajax({
      url: controller_path,
      type: 'GET',
      dataType: 'html',
      success: function(data) {
        jQuery(id).before(data); <!-- if you use before here, the relationship reference shit will break!!!!!!-->
      }
    });
  }

}


SGfM.actor = {
  render_matching_form : function(controller_path, actor_type_key) {
    jQuery.ajax({
      url: controller_path,
      type: 'GET',
      data: {"actor_type_key" : actor_type_key},
      dataType: 'html',
      success: function(data) {
        jQuery('#information-types-form').html(data);
      }
    });
  }
}

SGfM.information_type = {
  render_options_form : function(controller_path, information_field_type_key) {
    jQuery.ajax({
      url: controller_path,
      type: 'GET',
      data: {"information_field_type" : information_field_type_key},
      dataType: 'html',
      success: function(data) {
        jQuery('#data-options').replaceWith(data);
      }
    });
  }
}

<!-- always use this one -->
SGfM.form = {
  add_form : function(controller_path,where) {
    SGfM.add_form(controller_path, '#' + where);
  },
  add_form_before : function(controller_path, where) {
    SGfM.add_form_before(controller_path, '#' + where);
  },
  remove_form : function(id,field_number) {
    SGfM.remove_form('#' + id, field_number);
  },
  replace_form : function(id, data) {
    jQuery('#' + id).replaceWith(data)
  }
}



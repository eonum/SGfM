<% @page_title = t('devise.registration.new.title') %>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label(:email, t('form.email'), :class => 'control-label') %>
    <div class="controls">
      <%= f.email_field(:email, :placeholder => t('form.email'), :autofocus => true) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:password, t('form.password'), :class => 'control-label') %>
    <div class="controls">
      <%= f.password_field(:password, :placeholder => t('form.password')) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:password_confirmation, t('form.password_confirm'), :class => 'control-label') %>
    <div class="controls">
      <%= f.password_field(:password_confirmation, :placeholder => t('form.password')) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit(t('basic.sign_up'), :class => 'btn btn-large btn-primary') %>
  </div>

<% end %>


<%= render "devise/shared/links" %>

<% @page_title = t('actor.show.title', :actor => @actor.to_s) %>


<table class="table table-hover">
  <tr>
    <th><%= t('actor.show.field_table') %></th>
    <th><%= t('actor.show.value_table') %></th>
  </tr>
  <tr>
    <td><%= t('actor.show.type') %></td>
    <td><%= @actor.actor_type.name %></td>
  </tr>

  <% @informations.each do |info| %>
    <tr>
      <td><%= info.information_type.name %></td>
      <td><%= info.value %></td>
    </tr>
  <% end %>
</table>


<%= link_to(t('actor.show.edit_actor'), edit_actor_path(@actor)) %>

<%= fields_for(:actor) do |f| %>
  <div class="control-group">
    <%= f.label(:actor_type, t('actor.new.select_type'), class: 'control-label') %>
    <div class="controls">
      <%= f.collection_select(:actor_type, list_actor_types, :key, :name, {}, {:id => 'actor-type-select',:onchange => 'actor_type_selected()'}) %>
    </div>
  </div>
<% end %>
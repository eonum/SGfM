<% @page_title = t('actor.edit.title') %>


<%= form_for(@actor, :url => update_actor_path, :method => :post, :html => {:class => 'form-horizontal'}) do |f| %>

  <div class="control-group">
    <%= f.label(:actor_type, t('actor.edit.type'), :class => 'control-label') %>
    <div class="controls">
      <%= f.text_field(:actor_type, :disabled => 'disabled') %>
    </div>
  </div>

  <% @actor.informations.each do |i|%>
    <%=  f.fields_for i do |info_form| %>
      <div class="control-group">
        <%= info_form.label(i.key, i.name, :class => 'control-label') %>
        <div class="controls">
          <%= info_form.text_field i.key, :value => i.value %>
          <% @scopes = list_scopes %>
          <%= select("scope", i.key.to_s, options_from_collection_for_select(@scopes, :key, :name, selected: i.scope.key), {selected: i.scope.key})%>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="form-actions">
    <%= f.submit(t('form.update'), :class => 'btn btn-primary') %>
  </div>

<% end %>

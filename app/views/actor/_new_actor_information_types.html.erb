<%= form_for(:actor, url: create_actor_path, html: {class: 'form-horizontal'}) do |f| %>
  <% information_types.each do |information_type| %>
    <div class="control-group">
      <%= f.label(information_type.key, information_type.name, class: 'control-label') %>
      <div class="controls">
        <%= information_type.information_field_type.form(f, information_type.key, { :placeholder => information_type.name, :data => information_type.data, :required => true }) %>
      </div>
    </div>
  <% end %>

  <%= f.hidden_field(:actor_type_key, value: actor_type_key) %>

  <div class="form-actions">
    <%= f.submit(t('actor.new.create_actor'), class: 'btn btn-large btn-primary') %>
  </div>

<% end %>

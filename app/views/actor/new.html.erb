<script>
  $('document').ready(function() {
    SGfM.actor.render_matching_form('<%=information_types_for_actor_type_path%>',$('#actor-type-select').val());
    var options = {submitUrl: '<%= create_actor_path %>'};
    var wizard = $('#new-actor-wizard').wizard(options);
    wizard.show();
  });
</script>


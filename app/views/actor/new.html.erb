<% @page_title = 'Neuen Akteur erfassen' %>
<%= form_for(:actor, html: {class: 'form-horizontal'}) do |f| %>

    <div class="control-group">
        <%= f.label(:actor_type, 'Typ', class: 'control-label') %>
        <div class="controls">
            <%= f.collection_select(:actor_type, list_actor_types, :key, :name,{}, {:id => 'actor-type-select', :onchange => 'SGfM.render_matching_form(this.value);'}) %>
        </div>
    </div>

    <div id="information-types-form"></div>

    <div class="form-actions">
        <%= f.submit(:create, class: 'btn btn-primary') %>
    </div>

<% end %>

<script>
    //Set default form
    $('document').ready(function(){
        SGfM.render_matching_form($('#actor-type-select').val());
    });
</script>
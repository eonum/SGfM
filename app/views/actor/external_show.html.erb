<% @page_title = t('actor.show.title', :actor => @actor.to_s) %>


<table class="table table-hover">
  <tr>
    <th class="span4"><%= t('actor.show.information_type') %></th>
    <th class="span8"><%= t('actor.show.information_value') %></th>
  </tr>
  <tr>
    <td><%= t('actor.show.type') %></td>
    <td><%= @actor.actor_type.name %></td>
  </tr>

  <% @informations.each do |info| %>
    <tr>
      <td><%= info.information_type_decorator.name %></td>
      <td><%= info.value_to_s %></td>
    </tr>
  <% end %>
</table>


<table class="table table-hover">
  <tr>
    <th class="span3"><%= t('actor.show.relationship_type') %></th>
    <th class="span3"><%= t('actor.show.relationship_reference') %></th>
    <th class="span5"><%= t('actor.show.relationship_comment') %></th>
  </tr>
  <% @actor.relationships.each do |relationship| %>
    <tr>
      <td><%= relationship.relationship_type.to_s %></td>
      <td><%= relationship.reference.to_s %></td>
      <td><%= relationship.comment.to_s %></td>
    </tr>
  <% end %>
</table>
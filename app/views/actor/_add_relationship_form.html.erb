<%= fields_for(:actor) do |f| %>

  <div class="control-group">
    <%= f.label(:relationship_type, 'Relationship Type', class: 'control-label') %>
    <div class="controls">
      <%= f.collection_select(:relationship_type, relationship_types, :key, :name) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:reference, 'Reference', class: 'control-label') %>
    <div class="controls">
      <%= f.text_field(:reference) %>
    </div>
  </div>

<% end %>
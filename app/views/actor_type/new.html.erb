<% @page_title = t('actor_type.new.title') %>


<%= form_for(:actor_type, :url => create_actor_type_path, :html => {:class => 'form-horizontal'}) do |f| %>

  <div class="page-header">
    <h1><small><%= t('actor_type.new.basics') %></small></h1>
  </div>

  <div class="control-group">
    <%= f.label(:'name[en]', "#{t('actor_type.new.name')} (#{t('lang.en')})", :class => 'control-label') %>
    <div class="controls">
      <%= f.text_field(:'name[en]', :placeholder => t('actor_type.new.name'), :required => true) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:'name[de]', "#{t('actor_type.new.name')} (#{t('lang.de')})", :class => 'control-label') %>
    <div class="controls">
      <%= f.text_field(:'name[de]', :placeholder => t('actor_type.new.name'), :required => true) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:'name[fr]', "#{t('actor_type.new.name')} (#{t('lang.fr')})", :class => 'control-label') %>
    <div class="controls">
      <%= f.text_field(:'name[fr]', :placeholder => t('actor_type.new.name'), :required => true) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:'name[it]', "#{t('actor_type.new.name')} (#{t('lang.it')})", :class => 'control-label') %>
    <div class="controls">
      <%= f.text_field(:'name[it]', :placeholder => t('actor_type.new.name'), :required => true) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:'to_string_pattern', t('actor_type.new.to_string_pattern'), :class => 'control-label') %>
    <div class="controls">
      <%= f.text_field(:'to_string_pattern', :placeholder => t('actor_type.new.to_string_pattern'), :required => true) %>
      <span class="help-block"><%= t('actor_type.new.to_string_pattern_explanation') %></span>
    </div>
  </div>


  <div class="page-header">
    <h1><small><%= t('actor_type.new.information_types') %></small></h1>
  </div>

  <div id="information-type-form"></div>

  <div class="control-group">
    <p>
      <%= button_to_function('Add Information Type',
                             'SGfM.actor_type.add_information_type_form("' + add_information_type_form_path + '")',
                             :type => :button, :class => 'btn btn-medium') %>
    </p>
  </div>

  <div class="form-actions">
    <%= f.submit(t('actor_type.new.create_actor_type'), :class => 'btn btn-primary') %>
  </div>

<% end %>
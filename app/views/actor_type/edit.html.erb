<% @page_title = t('actor_type.edit.title') %>


<%= form_for(@actor_type, :url => update_actor_type_path, :method => :post, :html => {:class => 'form-horizontal'}) do |f| %>

  <div class="control-group">
    <%= f.label(:name, t('actor_type.edit.name'), :class => 'control-label') %>
    <div class="controls">
      <%= f.text_field(:name, :disabled => 'disabled') %>
    </div>
  </div>

    <% for info_type in @actor_type.information_type do %>
        <%= f.fields_for info_type do |it_form| %>
            <div class="control-group">
              <%= it_form.label(:key, info_type.name, :class => 'control-label') %>
              <div class="controls">
                <%= check_box_tag(info_type.key, '1') %>
              </div>
            </div>
        <% end %>
    <% end %>

  <!-- todo form -->

  <div class="form-actions">
    <%= f.submit(t('form.update'), :class => 'btn btn-primary') %>
  </div>

<% end %>

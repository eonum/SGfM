<%= content_for :admin_tab_bar do %>
    <% render :partial => 'shared/menuebar', :locals => {:actor_type => "active", :info_type => "", :import => "",
                                                         :scope => "", :relationship_type => ""} %>
<% end %>



<% @page_title = t('actor_type.list.title') %>


<div class="row pull-right bottom-margin">
  <%= link_to(t('actor_type.list.new_actor_type'), create_actor_type_path, :class => 'btn btn-primary') %>
</div>

<table class="table table-hover">
  <tr>
    <th><%= t('actor_type.list.name_table') %></th>
    <th><%= t('actor_type.list.key_table') %></th>
    <th><%= t('actor_type.list.actions_table') %></th>
  </tr>
  <% for actor_type in @actor_types %>
    <tr>
      <td><%= link_to(actor_type.name, show_actor_type_path(actor_type)) %></td>
      <td><%= actor_type.key %></td>
      <td>
        <%= link_to raw('<i class="icon-edit"></i>'), edit_actor_type_path(actor_type) %>
        <%= link_to(raw('<i class="icon-trash"></i>'), delete_actor_type_path(actor_type), :confirm => t('actor_type.list.sure_to_delete'), :method => :delete) %>
      </td>
    </tr>
  <% end %>
</table>
<% @page_title = t('relationship_type.list.title') %>


<div class="row">
  <div class="row pull-right">
    <%= link_to(t('relationship_type.list.new_relationship_type'), create_relationship_type_path, :class => 'btn btn-primary') %>
  </div>
</div>

<table class="table table-hover">
  <tr>
    <th><%= t('relationship_type.list.name_table') %></th>
    <th><%= t('relationship_type.list.key_table') %></th>
  </tr>
  <% @relationship_types.each do |relationship_type| %>
    <tr>
      <td><%= link_to(relationship_type, show_relationship_type_path(relationship_type)) %></td>
      <td><%= relationship_type.key %></td>
    </tr>
  <% end %>
</table>

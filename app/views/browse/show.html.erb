<% @page_title = t('actor.show.title', :actor => @actor.to_s) %>

<table class="table table-hover">
  <tr>
    <th class="span2"><%= @actor.actor_type.name %></th>
    <th class="span2"></th>
    <th class="span6"></th>
  </tr>



  <% @informations.each do |info| %>
      <tr>
        <td><%= info.information_type_decorator.name %></td>
        <td><%= info.value_to_s %></td>
        <td></td>
      </tr>
      <tr></tr>
  <% end %>
  <tr>
</table>

<table class="table table-hover">
  <th class="span2"><%= t('browse.show.relationships') %></th>
  <th class="span2"></th>
  <th class="span6"></th>
  </tr>

  <% @actor.relationships.each do |relationship| %>
      <tr>
        <td><%= relationship.relationship_type.to_s %></td>
        <td><%= link_to(relationship.reference.to_s, browse_actor_path(relationship.reference)) %></td>
        <td><%= relationship.comment.to_s %></td>
      </tr>
  <% end %>
</table>

<table class="table table-hover">
  <th class="span8"><%= t('browse.show.options') %></th>
  <th class="span1"></th>
  <th class="span1"></th>
  <% if @options[:email] %>
      <tr>
        <td><%= mail_to(@options[:email], t('browse.show.send_email')) %></td>
      </tr>
  <% end %>
  <% if @options[:street] and @options[:zip_code]%>
      <tr>
        <td><%= link_to(t('browse.show.find_on_google_maps'), @maps_query) %></td>
      </tr>
  <% end %>
  <tr>
  </tr>
</table>